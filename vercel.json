{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/dist/sitemap.xml"
    },
    {
      "src": "/robots.txt", 
      "dest": "/dist/robots.txt"
    },
    {
      "src": "/favicon.ico",
      "dest": "/dist/favicon.ico"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|map))",
      "dest": "/dist/$1"
    },
    {
      "src": "/faq",
      "dest": "/dist/index.html"
    },
    {
      "src": "/privacy",
      "dest": "/dist/index.html"
    },
    {
      "src": "/terms",
      "dest": "/dist/index.html"
    },
    {
      "src": "/transportation", 
      "dest": "/dist/index.html"
    },
    {
      "src": "/unsubscribe",
      "dest": "/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server.js": {
      "maxDuration": 10
    }
  }
}